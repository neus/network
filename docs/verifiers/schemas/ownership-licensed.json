{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.neus.network/verifiers/ownership-licensed/v1.0.0",
  "title": "Ownership Licensed Verifier Schema", 
  "description": "Schema for licensed content ownership verification",
  "type": "object",
  "required": ["content", "owner", "license"],
  "properties": {
    "content": {
      "type": "string",
      "description": "Licensed content being verified",
      "minLength": 1,
      "maxLength": 10000
    },
    "owner": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "License owner wallet address"
    },
    "license": {
      "type": "object",
      "required": ["contractAddress", "tokenId", "chainId", "ownerAddress"],
      "properties": {
        "contractAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "License NFT contract address"
        },
        "tokenId": {
          "type": "string", 
          "description": "License token ID",
          "pattern": "^[0-9]+$"
        },
        "chainId": {
          "type": "integer",
          "description": "Mainnet chain ID for license verification",
          "enum": [1, 137, 42161, 10, 8453]
        },
        "ownerAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Expected license holder address"
        },
        "type": {
          "type": "string",
          "enum": ["erc721", "erc1155"],
          "default": "erc721",
          "description": "License NFT standard type"
        }
      }
    },
    "reference": {
      "type": "object",
      "description": "Optional reference to licensed content",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["url", "ipfs", "tx", "other"]
        },
        "id": {
          "type": "string",
          "maxLength": 500
        }
      },
      "required": ["type", "id"]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "content": "VitaDAO Research License Content",
      "owner": "0x742d35Cc6634C0532925a3b8D82AB78c0D73C3Db",
      "license": {
        "contractAddress": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045",
        "tokenId": "1",
        "chainId": 1,
        "ownerAddress": "0x742d35Cc6634C0532925a3b8D82AB78c0D73C3Db",
        "type": "erc721"
      }
    },
    {
      "content": "Premium Software License",
      "owner": "0x742d35Cc6634C0532925a3b8D82AB78c0D73C3Db",
      "license": {
        "contractAddress": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045",
        "tokenId": "42",
        "chainId": 1,
        "ownerAddress": "0x742d35Cc6634C0532925a3b8D82AB78c0D73C3Db",
        "type": "erc721"
      }
    }
  ]
}
